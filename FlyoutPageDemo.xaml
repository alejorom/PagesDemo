<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.FlyoutPageDemo"
             Title="FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="LightGreen">
            <Label Text="Hallo Flyout Page"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"></Label>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="LightSteelBlue">
            <Label Text="Hallo Flyout Detail"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"></Label>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>